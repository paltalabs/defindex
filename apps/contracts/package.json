{
  "name": "contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "docker-compose run --rm --no-deps defindex-soroban make build",
    "deploy-factory": "tsc && node dist/deploy_factory.js",
    "deploy-hodl": "tsc && node dist/strategies/deploy_hodl.js",
